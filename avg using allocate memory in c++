#include <iostream>

using namespace std;

int main()
{
	int n;
	cout << "Enter total number for avg " << endl;
	cin >> n;

    float avg =0;
	int *p = new int[n];
	for( int i = 0; i < n; i++ )            
	{
        cout<< "Enter the data number " << i+1 <<":" ;
		cin >> p[i];
        avg += p[i];
	}
    
	avg = avg/n;
	cout << "avg is " << avg<< endl;
	return 0;
}

